# News API Configuration (REQUIRED - choose at least one)
NEWS_API_KEY=your_newsapi_key_here
GNEWS_API_KEY=your_gnews_key_here

# LLM Configuration (REQUIRED - choose ONE free option)
# Free Options:
LLM_PROVIDER=groq  # Options: groq, huggingface, together, openrouter, openai, anthropic
GROQ_API_KEY=your_groq_key_here
# OR
HUGGINGFACE_API_KEY=your_huggingface_token_here
# OR
TOGETHER_API_KEY=your_together_key_here
# OR
OPENROUTER_API_KEY=your_openrouter_key_here

# Paid Options (for later):
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Model (optional - uses provider default if empty)
LLM_MODEL=

# Meta (Facebook & Instagram) API (OPTIONAL - only if posting to these platforms)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_long_lived_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id
FACEBOOK_PAGE_ID=your_facebook_page_id

# YouTube API (OPTIONAL - only if posting to YouTube)
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# Scheduling
POST_TIMES=09:00,14:00,20:00  # 24-hour format, comma-separated
TIMEZONE=Asia/Kolkata  # Adjust to your timezone

# Media Generation
TTS_PROVIDER=gtts  # gtts or pyttsx3
BACKGROUND_VIDEO_PATH=assets/backgrounds/
FONT_PATH=assets/fonts/arial.ttf

# Storage
DATABASE_URL=sqlite:///./data/social_media_agent.db
MEDIA_STORAGE_PATH=./data/generated_media/

# Monitoring & Notifications (OPTIONAL)
ENABLE_NOTIFICATIONS=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=60



